{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"esnext",
    "lib": ["es2015", "es2016", "es2017", "es2020", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "exclude": ["**/dist/*", "**/esm/*"]
}
